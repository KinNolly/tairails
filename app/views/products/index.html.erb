<%= link_to "Login", new_session_path unless authenticated? %>
<%= link_to "Sign up", new_user_path unless authenticated? %>
<h1><%= t "Chào mừng đến với BAKERY Bánh Ngọt" %></h1>
<h1><%= t "Sản Phẩm" %></h1>

<table>
  <thead>
    <tr>
      <th><%= t "Name" %></th>
      <th><%= t "Image" %></th>
      <th><%= t "Action" %></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td>
            <% if product.featured_image.attached? %>
              <%= image_tag product.featured_image, width: 100, height: 100, alt: product.name %>
            <% else %>
              No image available
            <% end %>
        </td>
        <td><%= link_to 'Xem Chi Tiết', product %></td>
      </tr>
    <% end %>
    <td><%= link_to "Thêm Sản Phẩm", new_product_path if authenticated?%></td>
  </tbody>
</table>